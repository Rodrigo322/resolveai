generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  problem   Problem[]
  address   Address[]
  createdAt DateTime  @default(now())
}

model Problem {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  latitude    Int
  longitude   Int
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?
  status      String
  Image       Image[]
  solution    String?
  createdAt   DateTime @default(now())
}

model Image {
  id        Int     @id @default(autoincrement())
  path      String
  problem   Problem @relation(fields: [problemId], references: [id])
  problemId Int
}

model Address {
  id         Int     @id @default(autoincrement())
  street     String
  number     Int?
  district   String
  complement String?
  user       User?   @relation(fields: [userId], references: [id])
  userId     Int?
}
